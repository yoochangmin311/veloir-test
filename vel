    <script>
        let answers = [];
        let userName = '';
        let userAge = '';

        function startQuiz() {
            userName = document.getElementById('userName').value.trim();
            userAge = document.getElementById('userAge').value.trim();
            
            if (!userName || !userAge) {
                alert('ì´ë¦„ê³¼ ë‚˜ì´ë¥¼ ëª¨ë‘ ì…ë ¥í•´ì£¼ì„¸ìš”!');
                return;
            }
            
            document.getElementById('userInfo').style.display = 'none';
            document.getElementById('quiz').style.display = 'block';
            document.querySelector('.btn[onclick="calculateResult()"]').style.display = 'block';
        }

        // ì˜µì…˜ ì„ íƒ ì²˜ë¦¬
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('option')) {
                const question = e.target.closest('.question');
                const options = question.querySelectorAll('.option');
                
                // ê°™ì€ ì§ˆë¬¸ì˜ ë‹¤ë¥¸ ì˜µì…˜ë“¤ ì„ íƒ í•´ì œ
                options.forEach(opt => opt.classList.remove('selected'));
                
                // í˜„ì¬ ì˜µì…˜ ì„ íƒ
                e.target.classList.add('selected');
            }
        });

        function calculateResult() {
            const questions = document.querySelectorAll('.question');
            answers = [];
            
            questions.forEach(question => {
                const selected = question.querySelector('.option.selected');
                if (selected) {
                    answers.push(selected.getAttribute('data-type'));
                }
            });
            
            if (answers.length < 5) {
                alert('ëª¨ë“  ì§ˆë¬¸ì— ë‹µë³€í•´ì£¼ì„¸ìš”!');
                return;
            }
            
            const result = getPerfumeResult(answers);
            displayResult(result);
        }

        function getPerfumeResult(answers) {
            const counts = {};
            answers.forEach(answer => {
                counts[answer] = (counts[answer] || 0) + 1;
            });
            
            const mostCommon = Object.keys(counts).reduce((a, b) => 
                counts[a] > counts[b] ? a : b
            );
            
            const perfumes = {
                A: {
                    name: "í´ë¦¬ì–´ ì—˜ë ˆê°•ìŠ¤",
                    description: `${userName}ë‹˜ì€ ê¹”ë”í•˜ê³  ì„¸ë ¨ëœ ìŠ¤íƒ€ì¼ì„ ì¶”êµ¬í•˜ì‹œëŠ”êµ°ìš”! ì™„ë²½ì£¼ì˜ì  ì„±í–¥ê³¼ ì •ëˆëœ ë¼ì´í”„ìŠ¤íƒ€ì¼ì´ ë‹ë³´ì…ë‹ˆë‹¤. ì´ í–¥ìˆ˜ëŠ” ê¹¨ë—í•˜ê³  ëª¨ë˜í•œ ì‹œíŠ¸ëŸ¬ìŠ¤ í–¥ìœ¼ë¡œ ë‹¹ì‹ ì˜ ìš°ì•„í•¨ì„ ì™„ë²½í•˜ê²Œ í‘œí˜„í•´ì¤„ ê±°ì˜ˆìš”.`,
                    notes: "ë² ë¥´ê°€ëª», ë ˆëª¬, í™”ì´íŠ¸ë¨¸ìŠ¤í¬, ì‹œë”ìš°ë“œ",
                    color: "linear-gradient(145deg, #e3f2fd, #bbdefb)"
                },
                B: {
                    name: "í•˜íŠ¸ ì›Œë°",
                    description: `${userName}ë‹˜ì€ ë”°ëœ»í•œ ë§ˆìŒì˜ ì†Œìœ ìì‹œë„¤ìš”! ì‚¬ëŒë“¤ê³¼ì˜ ê´€ê³„ë¥¼ ì†Œì¤‘íˆ ì—¬ê¸°ê³  í¬ê·¼í•œ ë¶„ìœ„ê¸°ë¥¼ ë§Œë“œëŠ” ì¬ëŠ¥ì´ ìˆì–´ìš”. ì´ í–¥ìˆ˜ëŠ” ë‹¬ì½¤í•˜ê³  í¸ì•ˆí•œ í–¥ìœ¼ë¡œ ë‹¹ì‹ ì˜ ë”°ëœ»í•¨ì„ ì „í•´ì¤„ ê±°ì˜ˆìš”.`,
                    notes: "ë°”ë‹ë¼, ìºì‹œë¯¸ì–´ìš°ë“œ, ì•°ë²„, í™”ì´íŠ¸ í”Œë¼ì›Œ",
                    color: "linear-gradient(145deg, #fff3e0, #ffcc80)"
                },
                C: {
                    name: "ì–´ë“œë²¤ì²˜ ë¸”ë£¸",
                    description: `${userName}ë‹˜ì€ í™œê¸°ì°¨ê³  ëª¨í—˜ì„ ì¢‹ì•„í•˜ëŠ” ììœ ë¡œìš´ ì˜í˜¼ì´ì‹œêµ°ìš”! ìƒˆë¡œìš´ ê²½í—˜ì— ì—´ë ¤ìˆê³  ê¸ì •ì ì¸ ì—ë„ˆì§€ê°€ ë„˜ì³ìš”. ì´ í–¥ìˆ˜ëŠ” ìƒí¼í•˜ê³  ë°œë„í•œ í–¥ìœ¼ë¡œ ë‹¹ì‹ ì˜ ì—­ë™ì ì¸ ë§¤ë ¥ì„ ë³´ì—¬ì¤„ ê±°ì˜ˆìš”.`,
                    notes: "í•‘í¬ ìëª½, í”¼ì¹˜, í”„ë¦¬ì§€ì•„, ë¼ì´íŠ¸ ë¨¸ìŠ¤í¬",
                    color: "linear-gradient(145deg, #fce4ec, #f8bbd9)"
                },
                D: {
                    name: "ì•„í‹°ìŠ¤í‹± ì†Œìš¸",
                    description: `${userName}ë‹˜ì€ ì˜ˆìˆ ì  ê°ì„±ì´ ë›°ì–´ë‚˜ê³  ë…ì°½ì ì¸ ê°œì„±ì„ ê°€ì§€ì…¨ë„¤ìš”! ê¹Šì´ ìˆëŠ” ì‚¬ìƒ‰ê³¼ ì•„ë¦„ë‹¤ì›€ì— ëŒ€í•œ ì•ˆëª©ì´ ë‚¨ë‹¤ë¼ìš”. ì´ í–¥ìˆ˜ëŠ” ì‹ ë¹„ë¡­ê³  ë³µí•©ì ì¸ í–¥ìœ¼ë¡œ ë‹¹ì‹ ì˜ ì˜ˆìˆ ì  ë©´ëª¨ë¥¼ ë“œëŸ¬ë‚¼ ê±°ì˜ˆìš”.`,
                    notes: "ë¸”ë™ì»¤ëŸ°íŠ¸, ë¡œì¦ˆ, íŒ¨ì¸Œë¦¬, ì¸ì„¼ìŠ¤",
                    color: "linear-gradient(145deg, #f3e5f5, #ce93d8)"
                },
                E: {
                    name: "ì„¸ë ˆë‹ˆí‹° ê°€ë“ ",
                    description: `${userName}ë‹˜ì€ í‰ì˜¨í•¨ì„ ì¶”êµ¬í•˜ë©° ë‚´ë©´ì˜ ì¡°í™”ë¥¼ ì¤‘ì‹œí•˜ì‹œëŠ”êµ°ìš”! ìì—°ì„ ì‚¬ë‘í•˜ê³  ê³ ìš”í•œ ìˆœê°„ë“¤ì„ ì†Œì¤‘íˆ ì—¬ê¸°ì‹œë„¤ìš”. ì´ í–¥ìˆ˜ëŠ” ì€ì€í•˜ê³  ìì—°ìŠ¤ëŸ¬ìš´ í–¥ìœ¼ë¡œ ë‹¹ì‹ ì˜ í‰í™”ë¡œìš´ ì—ë„ˆì§€ë¥¼ í‘œí˜„í•´ì¤„ ê±°ì˜ˆìš”.`,
                    notes: "ê·¸ë¦°í‹°, ì¬ìŠ¤ë¯¼, ì„¸ì´ì§€, í™”ì´íŠ¸ìš°ë“œ",
                    color: "linear-gradient(145deg, #e8f5e8, #a5d6a7)"
                }
            };
            
            return perfumes[mostCommon] || perfumes.A;
        }

        function displayResult(result) {
            document.getElementById('quiz').style.display = 'none';
            document.querySelector('.btn[onclick="calculateResult()"]').style.display = 'none';
            
            document.getElementById('perfumeName').textContent = result.name;
            document.getElementById('perfumeDescription').textContent = result.description;
            document.getElementById('fragranceNotes').textContent = result.notes;
            document.getElementById('liquid').style.background = result.color;
            
            document.getElementById('result').style.display = 'block';
        }

        function sprayPerfume() {
            const bottle = document.querySelector('.perfume-bottle');
            bottle.style.transform = 'scale(1.1) rotate(5deg)';
            
            // ë°˜ì§ì´ëŠ” íš¨ê³¼
            const sparkles = document.createElement('div');
            sparkles.innerHTML = 'âœ¨ğŸ’«ğŸŒŸ';
            sparkles.style.position = 'absolute';
            sparkles.style.top = '50%';
            sparkles.style.left = '50%';
            sparkles.style.transform = 'translate(-50%, -50%)';
            sparkles.style.fontSize = '2rem';
            sparkles.style.animation = 'sparkle 1s ease-out forwards';
            bottle.appendChild(sparkles);
            
            setTimeout(() => {
                bottle.style.transform = '';
                sparkles.remove();
            }, 1000);
        }

        function restartQuiz() {
            answers = [];
            document.getElementById('result').style.display = 'none';
            document.getElementById('userInfo').style.display = 'block';
            document.getElementById('userName').value = '';
            document.getElementById('userAge').value = '';
            
            // ëª¨ë“  ì„ íƒ ì´ˆê¸°í™”
            document.querySelectorAll('.option.selected').forEach(option => {
                option.classList.remove('selected');
            });
        }

        // ë°˜ì§ì´ëŠ” ì• ë‹ˆë©”ì´ì…˜ CSS
        const style = document.createElement('style');
        style.textContent = `
            @keyframes sparkle {
                0% { opacity: 0; transform: translate(-50%, -50%) scale(0); }
                50% { opacity: 1; transform: translate(-50%, -50%) scale(1.2); }
                100% { opacity: 0; transform: translate(-50%, -50%) scale(0.8) translateY(-30px); }
            }
            
            input:focus {
                border-color: #667eea !important;
                outline: none;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
